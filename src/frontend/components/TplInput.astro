---
import DropdownSelect from './DropdownSelect.astro';

interface Props {
    name?: string;
    options?: { label: string; value: string; image?: string; description?: string }[];
    disabled?: boolean;
}

const { name, options = [], disabled = false } = Astro.props;
---

<DropdownSelect 
    name={name || ''} 
    options={options} 
    placeholder="Select a template" 
    {disabled}
/>
