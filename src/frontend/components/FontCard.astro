---
import {getPath as assetGetPath} from '../../core/loaders/assets'
const { id, exWidth=400, exHeight=150, exText='魚兒魚兒水中游～', title, filename} = Astro.props;
---

<div class="card max-w-130 not-prose bg-base-200 shadow-sm">
    <figure>
        <img
        src=`/${exWidth}x${exHeight}?font=${id}&text=${exText}`
        alt={id} />
    </figure>
    <div class="card-body">
        <header class="flex justify-center items-center">
            <h2 class="card-title">{id}</h2>
        </header>
        {filename && <p>filename: {filename}</p>}
        <!-- <p>A card component has a figure, a body part, and inside body there are title and actions parts</p> -->
        <div class="card-actions">
            <pre class="w-full overflow-x-auto bg-neutral text-neutral-content rounded-lg p-4">font=({id})</pre>
        </div>
    </div>
</div>
